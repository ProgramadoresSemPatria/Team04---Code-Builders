generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")

}


model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  serviceType   String @db.VarChar(100)
  password String
  phone         String?
  address       String?
  city          String?
  neighborhood  String?
  postalCode    String?
  isEmailVerify  Boolean?
  project     Project[]
  updated_At        DateTime?
  created_At        DateTime            @default(now())
}

enum Status{
  PLANNING       
  IN_PROGRESS   
  COMPLETED      
  PENDING_PAYMENT
  OVERDUE        
}


model Project {
  id              Int             @id @default(autoincrement())
  userId Int
  user User @relation(fields: [userId], references: [id])
  clientId        Int
  client          Client          @relation(fields: [clientId], references: [id])
  status          Status     @default(PLANNING)
  price           Float?          
  timeEntries     TimeEntry[]     
  updated_At        DateTime?
  created_At        DateTime            @default(now())
  
}


model Client {
  id       Int      @id @default(autoincrement())
  client String @db.VarChar(100)
  email String 
  phone         String?
  address       String?
  city          String?
  neighborhood  String?
  postalCode    String?
  projects Project[] 
}

model TimeEntry {
  id          Int      @id @default(autoincrement())
  projectId   Int
  project     Project  @relation(fields: [projectId], references: [id])
  duration    Int    
  description String
  date  DateTime?
  created_At   DateTime @default(now())
}

