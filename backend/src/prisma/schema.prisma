generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")

}


model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  serviceType   String @db.VarChar(100)
  password String
  phone         String?
  address       String?
  city          String?
  neighborhood  String?
  postalCode    String?
  isEmailVerified  Boolean @default(false)
  isPaymentDone    Boolean @default(false)
  projects     Project[]
  clients     Client[]
  timeEntries     TimeEntry[]
  updatedAt        DateTime            @updatedAt
  createdAt        DateTime            @default(now())
}

enum Status{
  PLANNING       
  IN_PROGRESS   
  COMPLETED      
  PENDING_PAYMENT
  OVERDUE        
}


model Project {
  id              Int             @id @default(autoincrement())
  name String
  userId Int
  clientId        Int
  status          Status     @default(PLANNING)
  price           Float?          
  timeEntries     TimeEntry[]     
  updatedAt        DateTime             @updatedAt
  createdAt        DateTime            @default(now())
  
  user User @relation(fields: [userId], references: [id])
  client          Client          @relation(fields: [clientId], references: [id])
}


model Client {
  id       Int      @id @default(autoincrement())
  userId Int
  name String 
  email String 
  phone         String?
  address       String?
  city          String?
  neighborhood  String?
  postalCode    String?
  projects Project[] 

  user User @relation(fields: [userId], references: [id])
}

model TimeEntry {
  id          Int      @id @default(autoincrement())
  userId      Int
  projectId   Int
  duration    Int    
  description String
  date  DateTime
  createdAt   DateTime @default(now())
  
  project     Project  @relation(fields: [projectId], references: [id])
  user User @relation(fields: [userId], references: [id])
}

